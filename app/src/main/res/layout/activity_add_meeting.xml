<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reunion3"
    tools:context=".ui.meeting.AddMeetingActivity">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:enabled="false"
        android:padding="4dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textMeetingtitle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        android:hint="Titre de la Réunion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:texte="application pizza">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="25dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textMeetingComment"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="394dp"
        android:layout_height="96dp"
        android:layout_margin="8dp"
        android:hint="Description"
        android:lines="4"
        android:maxLines="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMeetingtitle"
        tools:texte="réunion de suivi des avancesments de l'application pizza
        présentation carte
        précommandes
        suivi des règlement par carte bancaire">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="4" />


    </com.google.android.material.textfield.TextInputLayout>


    <ImageButton
        android:id="@+id/dateMeeting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_edit_calendar_24"
        app:layout_constraintTop_toBottomOf="@+id/textMeetingComment"
        app:layout_constraintTop_toEndOf="@id/textMeetingComment"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/dateMeeting"
        app:layout_constraintTop_toTopOf="@id/dateMeeting"
        tools:text="14/03/2022" />

    <ImageButton
        android:id="@+id/hourStartMeeting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintTop_toBottomOf="@+id/dateMeeting"
        app:layout_constraintTop_toEndOf="@id/dateMeeting"
        tools:layout_editor_absoluteX="9dp" />


    <TextView
        android:id="@+id/hourStartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="264dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/hourStartMeeting"
        app:layout_constraintTop_toTopOf="@id/hourStartMeeting"
        tools:text="10h30" />

    <ImageButton
        android:id="@+id/durationMeeting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_timer_24"
        app:layout_constraintTop_toBottomOf="@+id/hourStartMeeting"
        app:layout_constraintTop_toEndOf="@id/hourStartMeeting"
        tools:layout_editor_absoluteX="9dp" />


    <TextView
        android:id="@+id/durationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/durationMeeting"
        app:layout_constraintTop_toTopOf="@id/durationMeeting"
        tools:text="45 mn" />

    <ImageView
        android:id="@+id/hourEndMeeting"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:src="@drawable/ic_baseline_timer_off_24"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/durationText"
        app:layout_constraintTop_toTopOf="@id/durationText" />

    <TextView
        android:id="@+id/hourEndMeetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/hourEndMeeting"
        app:layout_constraintTop_toTopOf="@id/hourEndMeeting"
        tools:text="11h15" />

    <ImageButton
        android:id="@+id/participantMeeting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_group_24"
        app:layout_constraintTop_toBottomOf="@+id/durationMeeting"
        app:layout_constraintTop_toEndOf="@id/durationMeeting"
        tools:layout_editor_absoluteX="9dp" />

    <TextView
        android:id="@+id/participantText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/participantMeeting"
        app:layout_constraintTop_toTopOf="@id/participantMeeting"
        tools:text="Participant interne" />

    <ImageButton
        android:id="@+id/participantExtMeeting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_person_red_24"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@+id/participantText"
        app:layout_constraintTop_toBottomOf="@+id/durationText" />

    <TextView
        android:id="@+id/participantExtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/participantExtMeeting"
        app:layout_constraintTop_toTopOf="@id/participantExtMeeting"
        tools:text="Participant externe" />

    <TextView
        android:id="@+id/textMails"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="387dp"
        android:layout_height="222dp"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:hint="Invités"
        android:lines="10"
        android:maxLines="10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/dateMeeting"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/participantMeeting"
        app:layout_constraintTop_toBottomOf="@+id/participantMeeting"
        tools:text="Mathieu DUPONT   , Development      , Developer front end      , mathieu.dupont@pme.fr
        Henri DUPOND     , Development      , Developer back end       , henri.dupond@pme.fr
        Marie POPPY      , Development      , Developer mobile         , marie.poppy@pme.fr
        Sophie DAPRES    , Development      , Developer full stack     , sophie.dapres@pme.fr
        Annie VERSAIRE   , Development      , Developer mobile android , annie.versaire@pme.fr
        Paul NORD        , Development      , DeveloperDesigner        , paul.nord@pme.fr
        Jean NEMARD      , Development      , Developer mobile IOS     , mathieu.dupont@pme.fr
        Pierre KIROULE   , Development      , Developer front end      , pierre.kiroule@pme.fr
        Estelle NONCPASL , Development      , Developer ChefDe projet  , estelle.noncpasl@pme.fr
        Chloé MARTIN     , Development      , DeveloperDesigner        , chloe.martin@pme.fr" />

    <ImageButton
        android:id="@+id/roomMeeting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_baseline_meeting_room_blue_24"
        app:layout_constraintTop_toBottomOf="@+id/textMails"
        app:layout_constraintTop_toEndOf="@id/textMails"
        tools:layout_editor_absoluteX="9dp" />


    <TextView
        android:id="@+id/roomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/roomMeeting"
        app:layout_constraintTop_toTopOf="@id/roomMeeting"
        tools:text="Salle 104, Madagascar, 1er étage, 6 personnes max" />

    <Button
        android:id="@+id/meeting_set"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="Create Meeting"
        app:layout_constraintTop_toBottomOf="@+id/roomMeeting" />


</androidx.constraintlayout.widget.ConstraintLayout>